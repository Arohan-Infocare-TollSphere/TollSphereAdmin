@page "/user/profile"

@using Arohan.TollSphere.Server.UI.Pages.Identity.Users.Components
@using Arohan.TollSphere.Application.Common.Interfaces.Identity
@inject IStringLocalizer<Profile> Localizer
@inject IUserProfileState UserProfileState

<PageTitle>@ApplicationSettings.AppName - @Localizer["Profile"]</PageTitle>


<MudTabs Outlined="true" Position="Position.Top" Rounded="true" Border="true" 
         ApplyEffectsToContainer="true" Class="mt-8" PanelClass="pa-6">
    <MudTabPanel Text="@Localizer["Profile"]">
        <ProfileInformationTab />
    </MudTabPanel>

    <MudTabPanel Text="@Localizer["Change Password"]">
        <ChangePasswordTab />
    </MudTabPanel>

    <MudTabPanel Text="@Localizer["Two-Factor Authentication"]">
        <TwoFactorAuthTab />
    </MudTabPanel>

    <MudTabPanel Text="@Localizer["Org Chart"]">
        <OrgChartTab />
    </MudTabPanel>

    <MudTabPanel Text="@Localizer["Login History"]">
        <LoginHistoryTab />
    </MudTabPanel>
</MudTabs>


